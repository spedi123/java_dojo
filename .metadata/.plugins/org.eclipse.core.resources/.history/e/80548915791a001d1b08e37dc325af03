package com.spedi123.lookify.models;


@Entity
@Table(name = "")
public class SongModel {

	// ========== Primary Key ==========
	@Id
		@GeneratedValue(strategy = GenerationType.IDENTITY)
		private Long id;

	// ========== Member Variables ==========

	@NotNull
	    @Size(min = 2, max = 128, message = "Dog name must be at least 2 characters. CUSTOM")
	    private String name;
	    
	    @NotNull
	    @Min(0)
	    private int age;

	// ========== Constructors ==========

	// ========== Data Creation Event ==========

	@PrePersist
		protected void onCreate() {
			this.createdAt = new Date();
			this.updatedAt = new Date();
		}
		
		@PreUpdate
		protected void onUpdate() {
			this.updatedAt = new Date();

	// ========== Getters and Setters ==========
}
